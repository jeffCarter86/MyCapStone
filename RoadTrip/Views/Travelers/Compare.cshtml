@model List<RoadTrip.Models.Traveler>

@{
    ViewData["Title"] = "Compare";
}

<div class="container">

    <canvas id="myChart"></canvas>

</div>


<script>

    var tId = @Html.Raw(Json.Serialize(ViewBag.TripN));

    var cost = @Html.Raw(Json.Serialize(ViewBag.Cost));

    window.onload = function populateChart() {

        let ctx = document.getElementById('myChart').getContext('2d');

        let myChart = new Chart(ctx, {

            type: "bar",

            data: {

                labels: [tId],

                datasets: [{

                    labels: "Cost Comparison of Trips",

                    data: Cost

                    ,

                    backgroundColor: [

                        'rgba(255, 99, 132, 0.2)',

                        'rgba(54, 162, 235, 0.2)',

                        'rgba(255, 206, 86, 0.2)',

                        'rgba(75, 192, 192, 0.2)',

                        'rgba(153, 102, 255, 0.2)',

                        'rgba(255, 159, 64, 0.2)'

                    ],

                    borderColor: [

                        'rgba(255, 99, 132, 1)',

                        'rgba(54, 162, 235, 1)',

                        'rgba(255, 206, 86, 1)',

                        'rgba(75, 192, 192, 1)',

                        'rgba(153, 102, 255, 1)',

                        'rgba(255, 159, 64, 1)'

                    ],

                    borderWidth: 1

                }]

            },

            options: {

                scales: {

                    yAxes: [{

                        ticks: {

                            beginAtZero: true

                        }

                    }]

                }

            }

        });

    }



</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>



<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}